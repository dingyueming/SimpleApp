
<div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">设置报警区域</h4>
</div>
<div class="modal-body">
    <div class="form-group form-inline">
        <div id="divView"></div>
        <div id="divAdd">
            <label>区域名称:</label>
            <input class="form-control" id="areaName" name="areaName" type="text" placeholder="请输入区域名称" />
            <label>绘图类型:</label>
            <select class="form-control" style="width:100px;" id="drawtype">
                @*<option value="drawPoint">点</option>
            <option value="drawPolyline">多义线</option>*@
                <option value="drawPolygon">多边形</option>
                <option value="drawCircle">圆</option>
                <option value="drawRect">矩形</option>
            </select>
            <button id="drawbtn" class="btn btn-success">开始绘制</button>
            <button id="clearbtn" class="btn btn-warning">清除</button>
        </div>
    </div>
    <div id="map" style="width:100%;height:90%; margin-top:15px;"></div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
    <button type="button" class="btn btn-primary" onclick="vm.saveAreaAlarm();">确认</button>
</div>

